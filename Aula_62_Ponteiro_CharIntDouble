# include <stdio.h>

int main(void){
    int x = 10;
    double y = 20.50;
    char z = 'a';
    
    int *pX = &x;
    
    double *pY = &y;
    
    char *pZ = &z;
    
    double soma = *pX + *pY;
    
    int *resultado = &x;
    
    printf("Endereco x = %i - Valor x = %i\n", pX, *pX);
    
    printf("Endereco y = %i - Valor y = %f\n", pY, *pY);
    
    printf("Endereco z = %i - Valor z = %c\n", pX, *pZ);
    
    printf("A soma de %i e %.2f eh: %.2f\n",*pX, *pY, soma);
    
    printf("Endereco de X: %i\n", resultado);
    
    printf("Conteudo de X: %i\n", *resultado);
    
    getchar();
    return 0;
}
