# include <stdio.h>
# include <stdlib.h>

int main (void)
{
	float notas[4][4];
	float medias[4] = {0};
	int Aux;
	
	//Obtendo as notas dos alunos e calculando a soma das notas de cada aluno.
	for(int i = 0; i < 4; ++i){
		Aux = i;
		printf("Digite as quatro notas do aluno [%i]:", ++Aux);
		printf("\n");
		for(int j = 0; j < 4; ++j){
			Aux = j;
			printf("Nota [%i]: ", ++Aux);
			scanf("%f", &notas[i][j]);
			medias[i] += notas[i][j];
		}
	}
	
	//Calculando e apresentando a mÃ©dia de cada aluno.
	for(int i = 0; i < 4; ++i){
		Aux = i;
		printf("A media do aluno [%i] eh: %.2f\n", ++Aux, medias[i]/4);
	}
	printf("\n\n");
	
	system("pause");
	return 0;
}
