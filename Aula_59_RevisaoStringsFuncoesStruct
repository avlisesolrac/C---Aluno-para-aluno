}

bool compararStrings(const char palavra1[], const char palavra2[]){
     int i = 0;
     
     while(palavra[i] == palavra[i]
           && palavra[i] != '\0'
           && palavra[i] != '\0' ){
           
           ++i;
     }
     if(palavra[i] == '\0' && palavra2[i] == '\0'){
        return true;
     } else {
        return false;
     
}

int procurarStrings(char const struct dicionario lingua[],
                    const char procurar[],
                    const int numDePalavras){
   bool compararStrings(const char palavra1[], const char palavra2[]);
   
   int i = 0;
   
   while(i < numDePalavras){
      
      if(compararStrings(procurar, lingua[i].palavra)) {
           return i;
      }else{
            return -1;
      }
   }
}
