# include <stdio.h>
# include <stdlib.h>

int main (void){
	int continuar;
	struct lista{
		int valor;
		struct lista * proximo;
	};
	
	struct lista m1, m2, m3;
	
	struct lista *gancho = &m1;
	
	m1.valor = 10;
	m2.valor = 20;
	m3.valor = 30;
	
	m1.proximo = &m2;
	m2.proximo = &m3;
	m3.proximo = (struct lista*)0;
	
	while(gancho != (struct lista*)0){
		printf("%i\n", gancho->valor);
		printf("VocÃª quer ir para a proxima tela [0] || [1]: ");
		scanf("%i", &continuar);
		
		if(continuar == 1)
			gancho = gancho->proximo;
		else
			break;
	}
	printf("Programa encerrado pelo usuario.\n");
	
	system("pause");
	return 0;
}
